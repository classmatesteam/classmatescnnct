<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/enroll_main_RL"
    android:background="@mipmap/cm_bkg"
    tools:context=".EnterClassname">

    <RelativeLayout
        android:id="@+id/enrol_title_bar_RL"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:id="@+id/classname_back_RL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/enrol_back_IV"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/whiteback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Class"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/enrol_back_IV"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/class_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enrol_title_bar_RL"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Enter Class Name"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/class_name_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:inputType="textCapCharacters"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:maxLength="6"
            android:digits="QWERTYUIOPLKJHGFDSAZXCVBNM1234567890"
            android:focusableInTouchMode="true"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="Class Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="For Example (Class name: "
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="MAT321"
                android:textStyle="bold"
                android:textColor="@color/foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=")"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/enroll_next_TV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/nextbg"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/class_LL"
        android:text="NEXT"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</RelativeLayout>
