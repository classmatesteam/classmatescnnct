<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/custom_contacts_main_LL"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/customcontact_pic_RIV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/dummy_single" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/customcontact_pic_RIV">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customcontactname_TV"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="ANANT" />


            <!-- <TextView
                 android:id="@+id/eventdetail_TV"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Major"
                 android:layout_below="@+id/customcontactname_TV"/>-->
        </RelativeLayout>

        <TextView
            android:id="@+id/contacts_invite_TV"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Invite"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/foreground"
            android:layout_marginRight="10dp"
            android:background="@drawable/blueborder" />
    </RelativeLayout>

</LinearLayout>