<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/choose_sort_LL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:background="@drawable/sort_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Choose Option"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/background_dark" />

        <TextView
            android:id="@+id/sort_changes_TV"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Course Name(a-z)"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/background" />

        <TextView
            android:id="@+id/sort_DT_TV"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Date &amp; Time"
            android:gravity="center"
            android:textColor="@color/background" />

        <TextView
            android:id="@+id/sort_cancel_TV"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Cancel"
            android:gravity="center"
            android:textColor="@color/gray3" />

    </LinearLayout>

</LinearLayout>