<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cm_bkg"
    android:id="@+id/loginwithfb_main_RL"
    tools:context="app.com.classmates.LoginwithFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/cm_logo" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/classmate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cm_text"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_margin="30dp"
            android:gravity="center"
            android:padding="10dp" />

    </LinearLayout>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/Fb_login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:layout_marginBottom="40dp" />

    <ImageView
        android:id="@+id/fb_IV"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/login_fb" />
